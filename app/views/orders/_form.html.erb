<div class="container">
  <%= form_with model: @order do |form| %>

    <br>

    <div class='form-group'>
      <%= form.label :sender_name, class:'form-label mb-2 mt-3'%>
      <%= form.text_field :sender_name, class:'form-control form-control-sm' %>
    </div>
    <div class='form-group'>
      <%= form.label :receiver_name, class:'form-label mb-2 mt-3'%>
      <%= form.text_field :receiver_name, class:'form-control form-control-sm' %>
    </div>
      <%= form.label :from, class:'form-label mb-2 mt-3' %><br />
      <%= form.text_field :from, class: "form-control" %>
    </div>
    <div class='form-group'>
      <%= form.label :to, class:'form-label mb-2 mt-3' %><br />
      <%= form.text_field :to, class: "form-control" %>
    </div>
    <div class='form-group'>
      <%= form.label :weight_capacity, class:'form-label mb-2 mt-3' %><br />
      <%= form.number_field :weight_capacity, class: "form-control", min: 1 %>
    </div>

    <div class='form-group'>
      <%= form.label :contact, class:'form-label mb-2 mt-3' %>
      <%= form.number_field :contact, class:'form-control form-control-sm'%>
    </div>

    <div class='form-group'>
      <%= form.submit class:'btn btn-primary' %>
      <%= link_to 'Back', orders_path, method: :get, class:"btn btn-secondary"%>
    </div>
  <% end %>
</div>