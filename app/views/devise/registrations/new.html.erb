<div class="container"><br>
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :first_name, class:"form-label mb-2 mt-3" %><br />
      <%= f.text_field :first_name,class:"form-control form-control-sm"%>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class:"form-label mb-2 mt-3" %><br />
      <%= f.text_field :last_name,class:"form-control form-control-sm" %>
    </div>

    <div class="field">
      <%= f.label :email, class:"form-label mb-2 mt-3" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control form-control-sm" %>
    </div>

    <div class="form-group">
      <%= f.label :country,class:"form-label mb-2 mt-3" %><br />
      <%= f.text_field :country,class:"form-control form-control-sm" %>
    </div>
    <div class="form-group">
      <%= f.label :contact,class:"form-label mb-2 mt-3" %><br />
      <%= f.number_field :contact,class:"form-control form-control-sm" %>
    </div>
    
    <div class="field">
      <%= f.label :password, class:"form-label mb-2 mt-3" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:'form-control form-control-sm' %>
    </div>
    
    <div class="field">
      <%= f.label :password_confirmation, class:"form-label mb-2 mt-3" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control form-control-sm" %>
    </div><br>

    <div class="actions">
      <%= f.submit "Sign up", class:"btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
